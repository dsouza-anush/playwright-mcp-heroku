{
  "name": "Playwright MCP for Heroku",
  "description": "A Playwright MCP server for web browsing tools on Heroku - compatible with Heroku Inference",
  "repository": "https://github.com/dsouza-anush/playwright-mcp-heroku",
  "logo": "https://playwright.dev/img/playwright-logo.svg",
  "website": "https://github.com/dsouza-anush/playwright-mcp-heroku",
  "success_url": "/",
  "keywords": ["node", "playwright", "mcp", "browser", "automation", "heroku-inference", "ai-tools"],
  "env": {
    "NODE_ENV": {
      "description": "The environment for the application",
      "value": "production"
    },
    "PLAYWRIGHT_MCP_HEADLESS": {
      "description": "Run browser in headless mode",
      "value": "true"
    },
    "PLAYWRIGHT_MCP_BROWSER": {
      "description": "Browser to use (chromium, firefox, webkit)",
      "value": "chromium"
    }
  },
  "formation": {
    "web": {
      "quantity": 1,
      "size": "basic"
    },
    "mcp_playwright": {
      "quantity": 1,
      "size": "basic"
    }
  },
  "buildpacks": [
    {
      "url": "heroku/nodejs"
    }
  ],
  "addons": [],
  "stack": "heroku-22"
}