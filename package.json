{
  "name": "@playwright/mcp",
  "version": "0.0.33",
  "description": "Playwright Tools for MCP - Heroku Deployment",
  "type": "module",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/dsouza-anush/playwright-mcp-heroku.git"
  },
  "homepage": "https://playwright.dev",
  "engines": {
    "node": "18.x"
  },
  "author": {
    "name": "Microsoft Corporation"
  },
  "license": "Apache-2.0",
  "scripts": {
    "build": "tsc",
    "heroku-prebuild": "echo 'Installing devDependencies for build' && npm install --no-package-lock",
    "heroku-postbuild": "npm run build",
    "start": "node cli.js --host 0.0.0.0 --port $PORT --headless --browser chromium --no-sandbox",
    "lint": "npm run update-readme && npm run check-deps && eslint . && tsc --noEmit",
    "lint-fix": "eslint . --fix",
    "check-deps": "node utils/check-deps.js",
    "update-readme": "node utils/update-readme.js",
    "watch": "tsc --watch",
    "test": "playwright test",
    "clean": "rm -rf lib"
  },
  "exports": {
    "./package.json": "./package.json",
    ".": {
      "types": "./index.d.ts",
      "default": "./index.js"
    }
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.16.0",
    "commander": "^13.1.0",
    "debug": "^4.4.1",
    "dotenv": "^17.2.0",
    "mime": "^4.0.7",
    "playwright": "1.55.0-alpha-2025-08-12",
    "playwright-core": "1.55.0-alpha-2025-08-12",
    "ws": "^8.18.1",
    "zod": "^3.24.1",
    "zod-to-json-schema": "^3.24.4"
  },
  "devDependencies": {
    "@anthropic-ai/sdk": "^0.57.0",
    "@eslint/eslintrc": "^3.2.0",
    "@eslint/js": "^9.19.0",
    "@playwright/test": "1.55.0-alpha-2025-08-12",
    "@stylistic/eslint-plugin": "^3.0.1",
    "@types/debug": "^4.1.12",
    "@types/node": "^22.13.10",
    "@types/ws": "^8.18.1",
    "@typescript-eslint/eslint-plugin": "^8.26.1",
    "@typescript-eslint/parser": "^8.26.1",
    "@typescript-eslint/utils": "^8.26.1",
    "esbuild": "^0.20.1",
    "eslint": "^9.19.0",
    "eslint-plugin-import": "^2.31.0",
    "eslint-plugin-notice": "^1.0.0",
    "openai": "^5.10.2",
    "typescript": "^5.8.2"
  },
  "bin": {
    "mcp-server-playwright": "cli.js"
  }
}